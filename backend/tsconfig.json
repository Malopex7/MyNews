        "rootDir": "./src",
        "module": "CommonJS",
        "moduleResolution": "node",
        "composite": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../packages/schemas"
        },
        {
            "path": "../packages/domain"
        }
    ]
}